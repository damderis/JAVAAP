<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CartController">
    <VBox fx:id="cartPane" alignment="TOP_CENTER" prefHeight="346.0" prefWidth="600.0">
        <padding>
            <Insets bottom="25" left="25" right="25" top="25" />
        </padding>
      <children>
         <Label fx:id="empty" prefHeight="36.0" prefWidth="117.0" text=" Empty Cart">
            <font>
               <Font name="Impact" size="25.0" />
            </font>
         </Label>
         <Label fx:id="shopCart" layoutX="252.0" layoutY="35.0" prefHeight="55.0" prefWidth="148.0" text="Shopping Cart">
            <font>
               <Font name="Impact" size="25.0" />
            </font>
         </Label>
         <Label fx:id="totalLabel" prefHeight="28.0" prefWidth="65.0" text="Total : ">
            <font>
               <Font name="Impact" size="23.0" />
            </font>
         </Label>
         <Label fx:id="totalPriceLabel" prefHeight="28.0" prefWidth="128.0" textAlignment="CENTER">
            <font>
               <Font name="Impact" size="23.0" />
            </font>
         </Label>
         <Label fx:id="thanks" layoutX="246.0" layoutY="128.0" prefHeight="146.0" prefWidth="337.0" text="                             Thank you                          Don't forget to buy more with us" textAlignment="CENTER" wrapText="true">
            <font>
               <Font name="Impact" size="23.0" />
            </font>
         </Label>
      </children>
    </VBox>
</VBox>
